<script>
  const users = {
    ramon: '1234',
    camila: 'vipeti',
    larissa: 'seguro2025'
  };

  function verificarLicenca() {
    const user = document.getElementById('username').value;
    const pass = document.getElementById('password').value;
    const errorBox = document.getElementById('login-error');
    const licencaBox = document.getElementById('licenca-error');

    if (users[user] !== pass) {
      errorBox.classList.remove('d-none');
      return;
    }

    // Verifica licen칞a online via GitHub
    fetch("https://raw.githubusercontent.com/zarbinati/licencas/main/keys.json")
      .then(res => res.json())
      .then(data => {
        const licenca = data["vipeti"];
        if (
          licenca &&
          licenca.ativa === true &&
          licenca.key === "Z4R8-W7X2-Q9LK-A3MV-T6EJ-Y0FD"
        ) {
          document.getElementById('login-box').style.display = 'none';
          document.getElementById('dashboard').style.display = 'block';
        } else {
          licencaBox.classList.remove('d-none');
        }
      })
      .catch(() => {
        licencaBox.classList.remove('d-none');
      });
  }
</script>
